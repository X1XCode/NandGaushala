<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.dashboard.ProfileFragment">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar_header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/size30"
            android:layout_marginEnd="@dimen/size30"
            android:orientation="vertical">


            <EditText
                android:id="@+id/etFullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size30"
                android:background="@drawable/edittext_background_grey"
                android:hint="First Name"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingStart="@dimen/size15"
                android:paddingTop="@dimen/size12"
                android:paddingEnd="@dimen/size12"
                android:paddingBottom="@dimen/size12"
                android:singleLine="true"
                android:textColorHint="@color/grayText" />

            <EditText
                android:id="@+id/etSignPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gape10"
                android:background="@drawable/edittext_background_grey"
                android:hint="Last Name"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingStart="@dimen/size15"
                android:paddingTop="@dimen/size12"
                android:paddingEnd="@dimen/size12"
                android:paddingBottom="@dimen/size12"
                android:singleLine="true"
                android:textColorHint="@color/grayText" />

            <EditText
                android:id="@+id/etMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gape10"
                android:background="@drawable/edittext_background_grey"
                android:hint="Mobile Number"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="10"
                android:paddingStart="@dimen/size15"
                android:paddingTop="@dimen/size12"
                android:paddingEnd="@dimen/size12"
                android:paddingBottom="@dimen/size12"
                android:singleLine="true"
                android:textColorHint="@color/grayText" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gape10"
                android:background="@drawable/edittext_background_grey"
                android:hint="Email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLength="10"
                android:paddingStart="@dimen/size15"
                android:paddingTop="@dimen/size12"
                android:paddingEnd="@dimen/size12"
                android:paddingBottom="@dimen/size12"
                android:singleLine="true"
                android:textColorHint="@color/grayText" />

            <EditText
                android:id="@+id/etLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gape10"
                android:background="@drawable/edittext_background_grey"
                android:hint="Location"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingStart="@dimen/size15"
                android:paddingTop="@dimen/size12"
                android:paddingEnd="@dimen/size12"
                android:paddingBottom="@dimen/size12"
                android:singleLine="true"
                android:textColorHint="@color/grayText" />

            <EditText
                android:id="@+id/etCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gape10"
                android:background="@drawable/edittext_background_grey"
                android:hint="City"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingStart="@dimen/size15"
                android:paddingTop="@dimen/size12"
                android:paddingEnd="@dimen/size12"
                android:paddingBottom="@dimen/size12"
                android:singleLine="true"
                android:textColorHint="@color/grayText" />

            <EditText
                android:id="@+id/etState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gape10"
                android:background="@drawable/edittext_background_grey"
                android:hint="State"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingStart="@dimen/size15"
                android:paddingTop="@dimen/size12"
                android:paddingEnd="@dimen/size12"
                android:paddingBottom="@dimen/size12"
                android:singleLine="true"
                android:textColorHint="@color/grayText" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size20"
                android:background="@drawable/button_back"
                android:fontFamily="@font/roboto_regular"
                android:padding="@dimen/size5"
                android:text="Submit"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize22" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>