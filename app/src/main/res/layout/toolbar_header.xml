<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tool_bar"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/colorPrimary">

    <FrameLayout
        android:id="@+id/flFront"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/space_xl"
            android:paddingEnd="@dimen/size2"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_back" />
        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/space_xxxl"
            android:paddingEnd="@dimen/size2"
            android:visibility="gone"
            android:src="@drawable/ic_menu" />
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/tvHeader"
        android:layout_marginStart="@dimen/size20"
        android:fontFamily="@font/roboto_black"
        android:layout_toEndOf="@id/flFront"
        android:background="@color/transparent"
        android:layout_centerVertical="true"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.FontSemiPathView"
        android:textSize="@dimen/textSize16"
        android:textColor="@color/white"
        android:layout_centerInParent="true"/>

    <FrameLayout
        android:id="@+id/flEnd"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivFilter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/space_xl"
        android:paddingEnd="@dimen/gape10"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_filter" />

        <ImageView
            android:id="@+id/ivMore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/space_xl"
            android:paddingEnd="@dimen/gape10"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_more" />

    </FrameLayout>


</RelativeLayout>