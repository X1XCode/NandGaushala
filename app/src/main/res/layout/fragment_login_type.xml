<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.loginSignup.LoginTypeFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:text="Welcome to Product \n Marketing!"
            style="@style/textXLarge"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="@dimen/size25"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/flNormalLogin"
            android:layout_width="match_parent"
            android:background="@drawable/button_back"
            android:layout_marginStart="@dimen/size20"
            android:layout_marginEnd="@dimen/size20"
            android:layout_height="@dimen/size150">
            <ImageView
                android:src="@drawable/ic_normal_user"
                android:padding="5dp"
                android:layout_marginTop="@dimen/gape10"
                android:layout_gravity="top|center"
                android:layout_width="@dimen/size70"
                android:layout_height="@dimen/size70"/>
            <ImageView
                android:src="@drawable/ic_next"
                android:padding="5dp"
                android:layout_gravity="center|end"
                android:layout_width="@dimen/size50"
                android:layout_marginEnd="@dimen/gape10"
                android:layout_height="match_parent"/>
            <TextView
                android:text="Normal Login"
                style="@style/textXLargeWhite"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:padding="@dimen/size15"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"/>
        </FrameLayout>



        <FrameLayout
            android:id="@+id/flAdminLogin"
            android:layout_width="match_parent"
            android:background="@drawable/button_back"
            android:layout_marginTop="@dimen/size20"
            android:layout_marginStart="@dimen/size20"
            android:layout_marginEnd="@dimen/size20"
            android:layout_height="@dimen/size150">
            <ImageView
                android:src="@drawable/ic_admin_user"
                android:padding="5dp"
                android:layout_marginTop="@dimen/gape10"
                android:layout_gravity="top|center"
                android:layout_width="@dimen/size70"
                android:layout_height="@dimen/size70"/>
            <ImageView
                android:src="@drawable/ic_next"
                android:padding="5dp"
                android:layout_gravity="center|end"
                android:layout_width="@dimen/size50"
                android:layout_marginEnd="@dimen/gape10"
                android:layout_height="match_parent"/>
            <TextView
                android:text="Admin Login"
                style="@style/textXLargeWhite"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:padding="@dimen/size15"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"/>
        </FrameLayout>

    </LinearLayout>

</RelativeLayout>