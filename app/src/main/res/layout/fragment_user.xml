<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.dashboard.UserListFragment">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar_header"/>

    <TextView
        android:id="@+id/tvNoUser"
        android:text="No User Available"
        android:layout_centerInParent="true"
        android:textSize="@dimen/textSize18"
        android:textColor="@color/black"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUsers"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="@dimen/gape10"
        android:layout_gravity="center"
        android:paddingStart="@dimen/size20"
        android:paddingEnd="@dimen/size20"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>