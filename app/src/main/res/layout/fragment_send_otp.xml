<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragments.loginSignup.SendOtpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/textSize18"
            android:padding="@dimen/gape10"
            android:layout_marginBottom="@dimen/size15"
            android:text="We are sending otp to +91 7046487209\n Please enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.alimuzaffar.lib.pin.PinEntryEditText
            android:layout_width="match_parent"
            android:paddingStart="@dimen/size20"
            android:paddingEnd="@dimen/size20"
            android:inputType="number"
            android:maxLength="4"
            android:textIsSelectable="false"
            android:textSize="@dimen/textSize20"
            app:pinBackgroundDrawable="@drawable/edittext_background"
            app:pinAnimationType="popIn"
            android:layout_height="wrap_content"/>

        <Button
            android:text="Submit"
            android:layout_marginTop="@dimen/size20"
            android:background="@drawable/edittext_background"
            android:paddingStart="@dimen/size40"
            android:textSize="@dimen/textSize20"
            android:paddingEnd="@dimen/size40"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</RelativeLayout>